{
  "env": {
    "es2021": true,
    "browser": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "ignorePatterns": [
    "**/*.html",
    "**/coverage/**",
    "**/vendor.js",
    "**/swagger-ui/**"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "root": true,
  "rules": {
    "eqeqeq": ["error", "smart"],
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "sort-imports": [
      "error",
      {
        "ignoreCase": true,
        "allowSeparatedGroups": true
      }
    ]
  }
}
