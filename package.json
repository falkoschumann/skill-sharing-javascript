{
  "name": "skill-sharing",
  "version": "0.1.0",
  "author": "Falko Schumann",
  "license": "MIT",
  "type": "module",
  "main": "src/main.js",
  "dependencies": {
    "express": "4.18.2",
    "lit-html": "3.1.0"
  },
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@types/express": "4.17.21",
    "@types/supertest": "2.0.16",
    "cypress": "13.6.1",
    "eslint": "8.55.0",
    "eslint-plugin-cypress": "2.15.1",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "rollup": "4.8.0",
    "supertest": "6.3.3"
  },
  "jest": {
    "verbose": true,
    "transform": {},
    "watchPathIgnorePatterns": [
      "<rootDir>/data/"
    ]
  },
  "prettier": {
    "proseWrap": "always",
    "singleQuote": true
  },
  "eslintConfig": {
    "env": {
      "es2022": true,
      "browser": true,
      "cypress/globals": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:cypress/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "plugins": [
      "cypress"
    ],
    "ignorePatterns": [
      "coverage/",
      "data/",
      "vendor/"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "data/**",
      "public/**",
      "tests/**"
    ]
  }
}
