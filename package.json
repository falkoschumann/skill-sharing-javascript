{
  "name": "skill-sharing",
  "version": "0.1.0",
  "type": "module",
  "main": "src/main.js",
  "scripts": {
    "build": "npm run dist && npm run test && npm run check",
    "clean": "rm -rf public/vendor",
    "dist": "rollup -c",
    "test": "node --no-warnings=ExperimentalWarning --experimental-vm-modules node_modules/.bin/jest",
    "check": "prettier . --check && eslint public/js src tests",
    "format": "prettier . --write && eslint --fix public/js src tests",
    "start": "node src/main.js",
    "dev": "nodemon src/main.js"
  },
  "dependencies": {
    "express": "4.18.2",
    "lit-html": "3.0.1"
  },
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@types/express": "4.17.20",
    "@types/supertest": "2.0.15",
    "eslint": "8.52.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "nodemon": "3.0.1",
    "prettier": "3.0.3",
    "rollup": "4.3.0",
    "supertest": "6.3.3"
  },
  "jest": {
    "transform": {},
    "verbose": true,
    "watchPathIgnorePatterns": [
      "<rootDir>/data/"
    ]
  },
  "prettier": {
    "proseWrap": "always",
    "singleQuote": true
  },
  "eslintConfig": {
    "env": {
      "es2022": true,
      "browser": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "ignorePatterns": [
      "/coverage/",
      "**/vendor/*.js"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "data/**",
      "public/**",
      "tests/**"
    ]
  }
}
