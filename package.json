{
  "name": "skill-sharing",
  "version": "0.1.0",
  "author": "Falko Schumann",
  "license": "MIT",
  "engines": {
    "node": ">=18.7.0"
  },
  "type": "module",
  "main": "api/main.js",
  "scripts": {
    "start": "node api/main.js",
    "test": "vitest",
    "dev": "npm run \"dev:api\" & npm run \"dev:vite\"",
    "dev:api": "nodemon api/main.ts",
    "dev:vite": "vite",
    "build": "vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "@muspellheim/shared": "0.5.0",
    "express": "4.21.1",
    "lit-html": "3.2.1",
    "vite": "6.0.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "28.0.1",
    "@rollup/plugin-json": "6.1.0",
    "@rollup/plugin-node-resolve": "15.3.0",
    "@types/express": "5.0.0",
    "@types/supertest": "6.0.2",
    "@vitest/coverage-v8": "2.1.5",
    "eslint": "9.15.0",
    "eslint-plugin-lit": "1.15.0",
    "eslint-plugin-wc": "2.2.0",
    "eventsource": "2.0.2",
    "jsdom": "25.0.1",
    "nodemon": "3.1.7",
    "prettier": "3.3.3",
    "puppeteer": "23.9.0",
    "rollup": "4.28.0",
    "supertest": "7.0.0",
    "vitest": "2.1.8"
  },
  "bin": "build/index.js",
  "pkg": {
    "assets": [
      "dist/**/*",
      "public/**/*"
    ],
    "targets": [
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-win-x64"
    ],
    "outputPath": "dist"
  }
}
