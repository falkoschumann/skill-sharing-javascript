{
  "name": "skill-sharing",
  "version": "0.1.0",
  "author": "Falko Schumann",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "main": "src/main.js",
  "scripts": {
    "start": "make start",
    "test": "make test"
  },
  "dependencies": {
    "express": "4.18.2",
    "lit-html": "3.1.2"
  },
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@types/express": "4.17.21",
    "@types/supertest": "6.0.2",
    "cypress": "13.6.4",
    "eslint": "8.56.0",
    "eslint-plugin-cypress": "2.15.1",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "rollup": "4.10.0",
    "supertest": "6.3.4"
  },
  "jest": {
    "transform": {},
    "verbose": true,
    "watchPathIgnorePatterns": [
      "<rootDir>/data/"
    ]
  },
  "prettier": {
    "proseWrap": "always",
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "env": {
      "es2022": true,
      "browser": true,
      "cypress/globals": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:cypress/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "plugins": [
      "cypress"
    ],
    "ignorePatterns": [
      "coverage/",
      "data/",
      "vendor/"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "data/**",
      "public/**",
      "tests/**"
    ]
  }
}
